{
    "name": "online-learning-platform",
    "version": "1.0.0",
    "description": "MERN Stack Online Learning Platform",
    "main": "backend/server.js",
    "scripts": {
        "build": "npm install --production=false && npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm ci --include=dev && npm run build",
        "build:backend": "cd backend && npm ci --only=production",
        "start": "cd backend && node server.js",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm start"
    },
    "keywords": [
        "mern",
        "education",
        "learning-platform"
    ],
    "author": "Tharindu Kasthurisinghe",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^8.2.0"
    }
}